<script type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "ItemList",
		"itemListElement": [
		  {% for block in section.blocks %}
		  {
			"@type": "ImageObject",
			"position": {{ forloop.index }},
			"url": "{{ block.settings.image | img_url: '1200x' }}",
			"name": "{{ block.settings.heading }}",
			"description": "{{ block.settings.content }}",
			"potentialAction": {
			  "@type": "ViewAction",
			  "target": "{{ block.settings.button_link }}",
			  "name": "{{ block.settings.button_text }}"
			}
		  }{% unless forloop.last %},{% endunless %}
		  {% endfor %}
		]
	  }
</script>