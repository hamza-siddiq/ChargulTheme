<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "@id": {{ shop.secure_url | append: "#website" | json }},
    "name": {{ shop.name | json }},
    "url": {{ shop.secure_url | json }},
    "description": "Chargul offers authentic, hand-knotted Afghan wool rugs, promoting cultural exchange and preserving traditional weaving arts.",
    "inLanguage": "en-US",
    "potentialAction": [
      {
        "@type": "SearchAction",
        "target": {
          "@type": "EntryPoint",
          "urlTemplate": "https://www.chargul.com/search?q={search_term_string}"
        },
        "query-input": "required name=search_term_string"
      }
    ],
    "sameAs": [
      "https://www.instagram.com/chargul"
    ]
  }
</script>
