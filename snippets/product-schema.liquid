<script type="application/ld+json">
  {
    "@context": "https://schema.org/",
    "@type": "Product",
    "name": "{{ product.title }}",
    "image": [
      {% for image in product.images %}
        "{{ image.src | img_url: 'master' }}"{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ],
    "description": "{{ product.description | strip_html | truncate: 250 }}",
    "sku": "{{ product.selected_or_first_available_variant.sku }}",
    "brand": {
      "@type": "Brand",
      "name": "Chargul"
    },
    "offers": {
      "@type": "Offer",
      "url": "{{ shop.url }}{{ product.url }}",
      "priceCurrency": "{{ shop.currency }}",
      "price": "{{ product.price | money_without_currency }}",
      "availability": "{% if product.available %}https://schema.org/InStock{% else %}https://schema.org/OutOfStock{% endif %}",
      "itemCondition": "https://schema.org/NewCondition"
    },
    "isPartOf": {
      "@type": "WebPage",
      "name": "Chargul Afghan Rugs Collection",
      "url": "{{ shop.url }}/collections/afghan-rugs"
    },
    "hasPart": [
      {
        "@type": "WebPageElement",
        "name": "Product Gallery",
        "description": "Image gallery showcasing the product from various angles"
      },
      {
        "@type": "WebPageElement",
        "name": "Product Information",
        "description": "Detailed product information including title, price, and description"
      },
      {
        "@type": "WebPageElement",
        "name": "Variant Picker",
        "description": "Options to select different variants of the product"
      },
      {
        "@type": "WebPageElement",
        "name": "Add to Cart",
        "description": "Button to add the product to the shopping cart"
      },
      {
        "@type": "WebPageElement",
        "name": "Why Buy from Chargul",
        "description": "Information about Chargul's unique selling points"
      },
      {
        "@type": "WebPageElement",
        "name": "Shipping Policy",
        "description": "Details about shipping times, costs, and tracking"
      },
      {
        "@type": "WebPageElement",
        "name": "Return and Exchange Policy",
        "description": "Information about returns, refunds, and exchanges"
      },
      {
        "@type": "WebPageElement",
        "name": "Complementary Products",
        "description": "Section showcasing related or complementary products"
      },
      {
        "@type": "WebPageElement",
        "name": "Handcrafted Wonders",
        "description": "Information about the craftsmanship of Afghan rugs"
      },
      {
        "@type": "WebPageElement",
        "name": "The Journey of Chargul's Afghan Rugs",
        "description": "Story of how the rugs are made and delivered"
      },
      {
        "@type": "WebPageElement",
        "name": "Timeless Beauty, Unmatched Quality",
        "description": "Overview of the rug collection's qualities"
      },
      {
        "@type": "WebPageElement",
        "name": "The Enchantment of an Afghan Rug",
        "description": "Poetic description of the allure of Afghan rugs"
      },
      {
        "@type": "WebPageElement",
        "name": "Discover Curated Rugs",
        "description": "Gallery of other available rugs"
      }
    ],
    "additionalProperty": [
      {
        "@type": "PropertyValue",
        "name": "Material",
        "value": "Pure Wool"
      },
      {
        "@type": "PropertyValue",
        "name": "Construction",
        "value": "Hand-Knotted"
      },
      {
        "@type": "PropertyValue",
        "name": "Origin",
        "value": "Afghanistan"
      }
    ]
  }
  </script>