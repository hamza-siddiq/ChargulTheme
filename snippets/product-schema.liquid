{% if template.name == 'product' %}
    <script type="application/ld+json">
    {
      "@context": "http://schema.org/",
      "@type": "Product",
      "name": {{ product.title | strip_html | escape | json }},
      "url": {{ shop.url | append: product.url | json }},
      "sku": {{ product.selected_or_first_available_variant.sku | json }},
      {% if product.selected_or_first_available_variant.barcode.size == 12 %}
        "gtin12": {{ product.selected_or_first_available_variant.barcode | json }},
      {% endif %}
      {% if product.selected_or_first_available_variant.barcode.size == 13 %}
        "gtin13": {{ product.selected_or_first_available_variant.barcode | json }},
      {% endif %}
      {% if product.selected_or_first_available_variant.barcode.size == 14 %}
        "gtin14": {{ product.selected_or_first_available_variant.barcode | json }},
      {% endif %}
      "productID": {{ product.id | json }},
      "brand": {
        "@type": "Brand",
        "name": {{ product.vendor | escape | json }}
      },
      "description": {{ product.description | strip_html | json }},
      "image": [
        {% for image in product.images %}
          {{ image | img_url: 'grande' | prepend: "https:" | json }}{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ],
      {% if product.variants %}
      "offers": {
        "@type" : "Offer",
        "priceCurrency": {{ cart.currency.iso_code | json }},
        "price": {{ product.selected_or_first_available_variant.price | divided_by: 100.00 | json }},
        "itemCondition" : "http://schema.org/NewCondition",
        "availability" : "http://schema.org/{% if product.selected_or_first_available_variant.available %}InStock{% else %}OutOfStock{% endif %}",
        "url" : {{ shop.url | append: product.selected_or_first_available_variant.url | json }},
        "image": {{ product.featured_image | img_url: 'grande' | prepend: "https:" | json }},
        "name" : {{ product.title | strip_html | escape | json }},
        "sku": {{ product.selected_or_first_available_variant.sku | json }},
        "priceValidUntil": {{ 'now' | date: '%s' | plus: 31536000 | date: '%Y-%m-%d' | uri_encode | replace:'+','%20' | json }}
      },
      "additionalProperty": [
        {
          "@type": "PropertyValue",
          "propertyID": "item_group_id",
          "value": {{ product.id | json }}
        },
        {
          "@type": "PropertyValue",
          "name": "Material",
          "value": "Pure Wool"
        },
        {
          "@type": "PropertyValue",
          "name": "Dimensions",
          "value": {{ product.metafields.custom.dimensions | escape | json }}
        }
      ]
      {% endif %}
      {% if product.metafields.spr.reviews %}
      {% assign rating = product.metafields.spr.reviews | split: '"reviewCount": "' | last | split: '"' | first | plus: 0 %}
      {% if rating > 0 %}
      ,"aggregateRating": {
       "@type": "AggregateRating",
       "ratingValue": {{ product.metafields.spr.reviews | split: '"ratingValue": "' | last | split: '"' | first | plus: 0 }},
       "ratingCount": {{ rating }}
      }
      {% endif %}
      {% endif %}
    }
    </script>
  {% endif %}